// For format details, see https://aka.ms/devcontainer.json. 
{
	"name": "aws-cdk-devcontainer",

	// Choose `image` to get started quickly using the image already created, according to the Dockerfile
	// in this directory, in hub.docker.com.
	//
	// Alternatively, use `build` to build your image from the Dockerfile in this directory. This will 
	// ensure you have built with the latest version of all packages but also provides you with the option
	// to extend the aws-dev-container by creating your own Dockerfile that starts with 
	// `FROM barkinggecko/aws-cdk-devcontainer`.
	//
	// See https://containers.dev/guide/dockerfile for more information.

	"image": "barkinggecko/aws-cdk-devcontainer",

	// "build": {
    //     // Path is relataive to the devcontainer.json file.
    //     "dockerfile": "Dockerfile"
    // },

	"mounts": [
		{ "source": "/home/${localEnv:USER}/.aws", "target": "/home/devcontainer/.aws", "type": "bind" }
	],

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "",

	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			// Alternatively, just use Setting Sync to ensure you are always running your
			// preferred VS Code setup ( https://code.visualstudio.com/docs/editor/settings-sync ).
			"extensions": [
				"amazonwebservices.aws-toolkit-vscode",
				"devadvice.serverlessconsole",
			]
		}
	},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
